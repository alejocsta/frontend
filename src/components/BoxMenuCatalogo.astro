---
// src/components/CatalogueCard.astro
const { imageSrc, title, price, description } = Astro.props;
---


<div class="shadow-md rounded-lg overflow-hidden text-white bg-zinc-800 flex flex-col justify-center items-center p-4 hover:scale-105 ease-in duration-300 relative">
  <img src={imageSrc} alt={title} class="w-full h-32 object-cover rounded-2xl"/>
  <div class="flex justify-between items-center w-full mt-4">
    <h3 class="text-lg font-bold">{title}</h3>
    <p class="w-10 h-8 bg-orange-700 rounded-lg flex items-center justify-center">${price}</p>
  </div>
  <div class="flex justify-between items-center w-full mt-4">
    <button class="fa-solid fa-pencil absolute top-10 right-1 w-8 h-8 bg-yellow-700 text-white rounded-full hover:scale-105 ease-in duration-300"></button>
    <!-- BotÃ³n 'X' movido al contenedor relativo -->
    <button class="fa-solid fa-x absolute top-1 right-1 w-8 h-8 bg-red-800 text-white rounded-full hover:scale-105 ease-in duration-300"></button>
  </div>
  <span>{description}</span>
</div>


