---
import "../styles/global.css";
import "../components/BoxMenuCatalogo.astro"
import BoxMenuCatalogo from "../components/BoxMenuCatalogo.astro";
import AgregarMenu from "../components/AgregarMenu.astro";
import FormErorres from "../components/FormErorres.astro";
import TablaProductos from "./Tablas.astro";
import AgregarProducto from "./AgregarProducto.astro";

const currentPath = Astro.url.pathname;
let items: any[] = [];
let formBody = false;
let agregarMenu = false;
let tablaProductos = false;

if (currentPath.includes('/catalogo')) {
  agregarMenu = true;
} else if (currentPath.includes('/productos')) {
  tablaProductos = true;
} else if (currentPath.includes('/errores')){
  formBody = true;
}
---

<div class="w-7/8 h-max m-5 flex flex-col items-center justify-center bg-zinc-900 rounded-b-xl">
  {agregarMenu && (
    <div class="w-full flex justify-center">
      <AgregarMenu class="w-3/4" />
    </div>
  )}

  {tablaProductos && (
    <AgregarProducto class="w-3/4" />
    <div class="w-full flex justify-center flex-col">
      <TablaProductos class="w-3/4"/>
    </div>
    )}

  {formBody && (
      <div class="w-full flex justify-start">
          <FormErorres class="w-3/4" />
      </div>
  )}
</div>



